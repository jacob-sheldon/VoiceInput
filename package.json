{
  "name": "keyboardless",
  "version": "1.0.0",
  "description": "macOS voice input application using Electron + whisper.cpp",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "build:native": "node scripts/build-native.js",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json && cp src/renderer/*.html src/renderer/*.js dist/renderer/",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build": "npm run build:native && npm run build:preload && npm run build:main && npm run build:renderer",
    "start": "electron .",
    "dev": "npm run build && electron .",
    "rebuild": "npm run clean && npm install",
    "install:whisper": "bash scripts/install-whisper.sh",
    "download:model": "node scripts/download-model.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac --publish never",
    "dist:mac:dev": "npm run build && electron-builder --mac --arm64"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^26.6.10",
    "electron-builder": "^26.4.0",
    "nan": "^2.18.0",
    "node-gyp": "^10.0.1",
    "pngjs": "^7.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.keyboardless.app",
    "productName": "KeyboardLess",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "build/Release/*.node",
      "native-deps/whisper.cpp/build/bin/*"
    ],
    "asarUnpack": [
      "build/Release/*.node",
      "native-deps/whisper.cpp/build/bin/*"
    ],
    "extraResources": [
      {
        "from": "native-deps/whisper.cpp/models",
        "to": "whisper/models"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": ["arm64", "x64"]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    }
  }
}
